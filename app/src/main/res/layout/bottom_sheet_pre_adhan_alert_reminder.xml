<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_pre_adhan_alert"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/notification_bottom_sheet_bg"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_pre_notification"
        style="@style/toolbar_sub_screens_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Pre-Adhan Reminder-Alert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_alert_none"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pre_notification" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_none_alert"
        style="@style/side_menu_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:text="@string/none"
        app:layout_constraintBottom_toBottomOf="@+id/view_alert_none"
        app:layout_constraintStart_toStartOf="@+id/view_alert_none"
        app:layout_constraintTop_toTopOf="@+id/view_alert_none" />

    <View
        android:id="@+id/view_alert_five_min"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_alert_none" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_alert_five_min"
        style="@style/side_menu_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:text="@string/_5_mins_before"
        app:layout_constraintBottom_toBottomOf="@+id/view_alert_five_min"
        app:layout_constraintStart_toStartOf="@+id/view_alert_five_min"
        app:layout_constraintTop_toTopOf="@+id/view_alert_five_min" />

    <View
        android:id="@+id/view_alert_ten_min"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_alert_five_min" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_alert_ten_min"
        style="@style/side_menu_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:text="@string/_10_mins_before"
        app:layout_constraintBottom_toBottomOf="@+id/view_alert_ten_min"
        app:layout_constraintStart_toStartOf="@+id/view_alert_ten_min"
        app:layout_constraintTop_toTopOf="@+id/view_alert_ten_min" />

    <View
        android:id="@+id/view_alert_fifteen_min"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_alert_ten_min" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_alert_fifteen_min"
        style="@style/side_menu_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:text="@string/_15_mins_before"
        app:layout_constraintBottom_toBottomOf="@+id/view_alert_fifteen_min"
        app:layout_constraintStart_toStartOf="@+id/view_alert_fifteen_min"
        app:layout_constraintTop_toTopOf="@+id/view_alert_fifteen_min" />
</androidx.constraintlayout.widget.ConstraintLayout>