<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="duaFragment"
            type="com.qibla.qiblacompass.prayertime.finddirection.presentation.views.dua.DuaFragment" />
    </data>


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".presentation.views.dua.DuaFragment">

    <include
        android:id="@+id/toolbar_dua"
        layout="@layout/layout_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left_dua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/dashboard_guideline_left" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right_dua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/dashboard_guideline_right" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_title_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_first_dua"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_dua"
        app:layout_constraintStart_toStartOf="@id/guideline_left_dua"
        app:layout_constraintEnd_toEndOf="@id/guideline_right_dua"
         />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_dua_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_title_dua_e_qanoot"
        app:layout_constraintBottom_toBottomOf="@+id/img_title_bg"
        app:layout_constraintEnd_toEndOf="@+id/img_title_bg"
        app:layout_constraintStart_toStartOf="@+id/img_title_bg"
        app:layout_constraintTop_toTopOf="@+id/img_title_bg" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_dua_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:src="@drawable/img_dua_second"
        app:layout_constraintEnd_toEndOf="@+id/img_title_bg"
        app:layout_constraintStart_toStartOf="@+id/img_title_bg"
        app:layout_constraintTop_toBottomOf="@+id/img_title_bg" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_due_e_qanoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_dua_e_qanoot"
        android:layout_marginTop="@dimen/_4sdp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right_dua"
        app:layout_constraintStart_toStartOf="@+id/guideline_left_dua"
        app:layout_constraintTop_toBottomOf="@+id/img_dua_start" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>