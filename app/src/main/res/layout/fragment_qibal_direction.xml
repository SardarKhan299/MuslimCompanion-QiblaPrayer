        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/qibla_indicator"
            android:layout_width="@dimen/qibla"
            android:layout_height="330dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/compass_hands"
            android:scaleType="fitXY"
            android:src="@drawable/qibla_new"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/tv_location_city"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right_direction"
            app:layout_constraintStart_toStartOf="@+id/guideline_left_direction"
            app:layout_constraintTop_toBottomOf="@+id/tv_location_country_compass" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bg_shade"
            android:layout_width="@dimen/qibla"
            android:layout_height="285dp"
            android:contentDescription="@string/compass_hands"
            android:scaleType="fitXY"
            android:src="@drawable/shade_green"
            app:layout_constraintBottom_toBottomOf="@+id/qibla_indicator"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right_direction"
            app:layout_constraintStart_toStartOf="@+id/guideline_left_direction"
            app:layout_constraintTop_toTopOf="@+id/qibla_indicator" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/dial"
            android:layout_width="@dimen/dial"
            android:layout_height="240dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/compass_dial"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/qibla_indicator"
            app:layout_constraintEnd_toEndOf="@+id/qibla_indicator"
            app:layout_constraintStart_toStartOf="@+id/qibla_indicator"
            app:layout_constraintTop_toTopOf="@+id/qibla_indicator"
            app:srcCompat="@drawable/compass3" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/needle"
            android:layout_width="40dp"
            android:layout_height="170dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/compass_dial"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/dial"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right_direction"
            app:layout_constraintStart_toStartOf="@+id/guideline_left_direction"
            app:layout_constraintTop_toTopOf="@+id/dial"
            app:srcCompat="@drawable/needle_new" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>