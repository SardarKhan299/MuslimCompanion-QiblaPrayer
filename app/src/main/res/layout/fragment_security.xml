<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="securityFragment"
            type="com.qibla.qiblacompass.prayertime.finddirection.presentation.views.security.SecurityFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_security_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_side_menu"
        tools:context=".presentation.views.security.SecurityFragment">

        <include
            android:id="@+id/toolbar_security"
            layout="@layout/layout_toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_security_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="@dimen/dashboard_guideline_left"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_security_menu_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="@dimen/dashboard_guideline_right" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_security_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view_reset_password"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintEnd_toStartOf="@+id/guideline_security_menu_right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline_security_left"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_security" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_reset_password"
            style="@style/side_menu_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:text="@string/reset_password"
            app:layout_constraintBottom_toBottomOf="@+id/view_reset_password"
            app:layout_constraintStart_toStartOf="@+id/view_reset_password"
            app:layout_constraintTop_toTopOf="@+id/view_reset_password" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_down_arrow"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_down_arrow"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tv_reset_password"
            app:layout_constraintEnd_toStartOf="@+id/guideline_security_menu_right"
            app:layout_constraintTop_toTopOf="@+id/tv_reset_password" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_up_arrow"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_up_arrow"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tv_reset_password"
            app:layout_constraintEnd_toStartOf="@+id/guideline_security_menu_right"
            app:layout_constraintTop_toTopOf="@+id/tv_reset_password" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutTextInputNewPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:endIconDrawable="@drawable/password_toggle_btn"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/primary_color"
            app:errorEnabled="true"
            app:layout_constraintEnd_toStartOf="@+id/guideline_security_menu_right"
            app:layout_constraintStart_toStartOf="@+id/guideline_security_left"
            app:layout_constraintTop_toBottomOf="@+id/view_reset_password">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_new_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_transparent"
                android:drawablePadding="@dimen/_4sdp"
                android:ems="10"
                android:hint="@string/new_password"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textAlignment="viewStart" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutTextInputConfirmPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:endIconDrawable="@drawable/password_toggle_btn"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/primary_color"
            app:errorEnabled="true"
            app:layout_constraintEnd_toStartOf="@+id/guideline_security_menu_right"
            app:layout_constraintStart_toStartOf="@+id/guideline_security_left"
            app:layout_constraintTop_toBottomOf="@+id/layoutTextInputNewPassword">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_transparent"
                android:drawablePadding="@dimen/_4sdp"
                android:ems="10"
                android:hint="@string/confirm_password"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textAlignment="viewStart" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_update_password"
            style="@style/button_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/button_bg"
            android:text="@string/update"
            app:layout_constraintEnd_toStartOf="@+id/guideline_security_menu_right"
            app:layout_constraintStart_toStartOf="@+id/guideline_security_left"
            app:layout_constraintTop_toBottomOf="@+id/layoutTextInputConfirmPassword" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_security_reset_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="btn_update_password,layoutTextInputConfirmPassword,layoutTextInputNewPassword"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view_delete_account"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintEnd_toStartOf="@+id/guideline_security_menu_right"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline_security_left"
            app:layout_constraintTop_toBottomOf="@+id/btn_update_password" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_delete_account"
            style="@style/delete_account_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:text="@string/delete_account"
            app:layout_constraintBottom_toBottomOf="@+id/view_delete_account"
            app:layout_constraintStart_toStartOf="@+id/view_delete_account"
            app:layout_constraintTop_toTopOf="@+id/view_delete_account" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>