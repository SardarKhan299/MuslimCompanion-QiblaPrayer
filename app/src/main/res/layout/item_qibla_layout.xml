<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/_4sdp"
    android:paddingEnd="@dimen/_4sdp"
    >

    <androidx.appcompat.widget.AppCompatImageView

        android:id="@+id/img_item_frame"
        android:layout_width="@dimen/_48sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:src="@drawable/ic_qibla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title_item"
        style="@style/version_text_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/qibla"
        android:textAlignment="center"
        android:textSize="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_2sdp"
        app:layout_constraintEnd_toEndOf="@+id/img_item_frame"
        app:layout_constraintStart_toStartOf="@+id/img_item_frame"
        app:layout_constraintTop_toBottomOf="@+id/img_item_frame" />

</androidx.constraintlayout.widget.ConstraintLayout>