<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_onboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_qibla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/onboard_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_onboard_title"
        android:layout_marginTop="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@+id/iv_onboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/qibla_compass"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_onboard_desc"
        style="@style/onboard_text_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:paddingStart="@dimen/_16sdp"
        android:paddingEnd="@dimen/_16sdp"
        android:text="@string/test"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/tv_onboard_title"
        app:layout_constraintStart_toStartOf="@+id/tv_onboard_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_onboard_title" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_onboard_indicator"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/idicator1"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_onboard_desc"
        />
</androidx.constraintlayout.widget.ConstraintLayout>