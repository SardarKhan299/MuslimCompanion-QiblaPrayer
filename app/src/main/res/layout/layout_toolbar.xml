<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_toolbar_title"
        style="@style/toolbar_title_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:text="@string/my_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_toolbar"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:padding="@dimen/_2sdp"
        android:src="@drawable/ic_toolbar_menu"
        app:layout_constraintBottom_toBottomOf="@+id/tv_toolbar_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_toolbar_title" />

    <View
        android:id="@+id/view_toolbar"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:background="@drawable/circle_toolbar_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_toolbar_back_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@+id/view_toolbar"
        app:layout_constraintEnd_toEndOf="@+id/view_toolbar"
        app:layout_constraintStart_toStartOf="@+id/view_toolbar"
        app:layout_constraintTop_toTopOf="@+id/view_toolbar" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_profile_image"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/doc_avatar"
        app:layout_constraintBottom_toBottomOf="@+id/view_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_toolbar"
        app:shapeAppearanceOverlay="@style/roundedCornersImageView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_profile_name"
        style="@style/toolbar_title_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_6sdp"
        android:text="@string/profile_name"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintBottom_toBottomOf="@+id/img_profile_image"
        app:layout_constraintEnd_toStartOf="@+id/img_profile_image"
        app:layout_constraintTop_toTopOf="@+id/img_profile_image" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="tv_toolbar_title,img_toolbar"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_toolbar_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="tv_profile_name,img_profile_image,view_toolbar,img_toolbar_back_icon"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view_subScreen"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:background="@drawable/circle_toolbar_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_subScreen_back_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@+id/view_subScreen"
        app:layout_constraintEnd_toEndOf="@+id/view_subScreen"
        app:layout_constraintStart_toStartOf="@+id/view_subScreen"
        app:layout_constraintTop_toTopOf="@+id/view_subScreen" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_toolbar_sub_screen"
        style="@style/toolbar_sub_screens_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_settings"
        app:layout_constraintBottom_toBottomOf="@+id/view_subScreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_subScreen" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_toolbar_sub_screen_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="tv_toolbar_sub_screen,img_subScreen_back_icon,view_subScreen"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view_next_prayer_icon"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:background="@drawable/toolbar_next_prayer_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_close"
        app:layout_constraintBottom_toBottomOf="@+id/view_next_prayer_icon"
        app:layout_constraintEnd_toEndOf="@+id/view_next_prayer_icon"
        app:layout_constraintStart_toStartOf="@+id/view_next_prayer_icon"
        app:layout_constraintTop_toTopOf="@+id/view_next_prayer_icon" />

    <View
        android:id="@+id/view_bell_notification_icon"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:background="@drawable/toolbar_next_prayer_bg"
        app:layout_constraintBottom_toBottomOf="@+id/view_next_prayer_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_next_prayer_icon" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_notification_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bell_icon"
        app:layout_constraintBottom_toBottomOf="@+id/view_bell_notification_icon"
        app:layout_constraintEnd_toEndOf="@+id/view_bell_notification_icon"
        app:layout_constraintStart_toStartOf="@+id/view_bell_notification_icon"
        app:layout_constraintTop_toTopOf="@+id/view_bell_notification_icon" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_toolbar_title_next_prayer"
        style="@style/today_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Prayer Time"
        app:layout_constraintBottom_toBottomOf="@+id/view_next_prayer_icon"
        app:layout_constraintEnd_toStartOf="@+id/view_bell_notification_icon"
        app:layout_constraintStart_toEndOf="@+id/view_next_prayer_icon"
        app:layout_constraintTop_toTopOf="@+id/view_next_prayer_icon" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_toolbar_next_prayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="img_close,view_next_prayer_icon,
        tv_toolbar_title_next_prayer,view_bell_notification_icon,
img_notification_icon"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_navigate_back"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:src="@drawable/ic_navigate_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_add_more"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:src="@drawable/ic_more"
        app:layout_constraintBottom_toBottomOf="@+id/img_navigate_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_navigate_back" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_counter"
        style="@style/title_toolbar_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tasbih_counter"
        app:layout_constraintBottom_toBottomOf="@+id/img_navigate_back"
        app:layout_constraintEnd_toStartOf="@+id/img_add_more"
        app:layout_constraintStart_toEndOf="@+id/img_navigate_back"
        app:layout_constraintTop_toTopOf="@+id/img_navigate_back" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_toolbar_tasbih_counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="title_counter,img_add_more,img_navigate_back"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>