<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/transition"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="800"
        motion:autoTransition="jumpToStart"
        motion:pathMotionArc="flip"
        >


       <KeyFrameSet>
       </KeyFrameSet>

    <OnClick motion:targetId="@+id/view_animated_counter" />
    </Transition>
    <ConstraintSet android:id="@+id/start">
        <Constraint android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/img_animated_move"
        motion:layout_constraintStart_toStartOf="@+id/img_top_counter_three"
        motion:layout_constraintTop_toTopOf="@+id/img_top_counter_three"
        motion:layout_constraintBottom_toBottomOf="@+id/img_top_counter_three"/>
        <Constraint
            android:id="@+id/view_animated_counter"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="@dimen/_240sdp"
            motion:layout_constraintHorizontal_bias="1.0"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            motion:pathMotionArc="flip" />


    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/img_animated_move"
            motion:layout_constraintEnd_toStartOf="@+id/img_bottom_counter"
            motion:layout_constraintTop_toTopOf="@+id/img_bottom_count_counter"
            motion:layout_constraintBottom_toBottomOf="@+id/img_bottom_count_counter" />
    </ConstraintSet>
</MotionScene>